{
  "name": "html-tag-interfaces",
  "version": "0.0.0-development",
  "description": "Map HTML tag names to their interfaces",
  "type": "module",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "main": "dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf coverage/ dist/",
    "prepack": "npm run clean && npm run build",
    "build": "microbundle",
    "dev": "microbundle watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "format": "prettier --write .",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keplersj/html-tag-interfaces.git"
  },
  "keywords": [
    "html",
    "tag",
    "name",
    "element",
    "tagname",
    "interface",
    "dom",
    "w3c",
    "whatwg"
  ],
  "author": "Kepler Sticka-Jones <kepler@stickajones.org>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/keplersj/html-tag-interfaces/issues"
  },
  "homepage": "https://github.com/keplersj/html-tag-interfaces#readme",
  "devDependencies": {
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.2",
    "@types/jest": "27.5.2",
    "eslint": "7.32.0",
    "eslint-config-starstuff": "1.5.8",
    "husky": "9.0.11",
    "jest": "27.5.1",
    "microbundle": "0.15.1",
    "prettier": "2.8.8",
    "rimraf": "5.0.5",
    "ts-jest": "27.1.5",
    "typescript": "4.9.5"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "collectCoverage": true,
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "eslintConfig": {
    "extends": "starstuff/auto",
    "env": {
      "browser": true
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  }
}
